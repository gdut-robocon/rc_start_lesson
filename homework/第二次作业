#include "ros/ros.h"
#include "ros_tutorials_service/AddTwoInts.h"
#include "plumbing_server_client/Addints.h"

bool callback(ros_tutorials_service::AddTwoInts::Request& request,
              ros_tutorials_service::AddTwoInts::Response& response){
            long int num1 = request.numA;
            long int num2 = request.numB;
            long int sum = num1 + num2;
            ROS_INFO("受到的数据是numA = %ld, numB = %ld",num1,num2);
            response.sum = sum;
            ROS_INFO("求和结果是%ld",response.sum);
            return true;        
              }
// bool 返回值由于标志是否处理成功
bool doReq(plumbing_server_client::Addints::Request& req,
          plumbing_server_client::Addints::Response& resp){
    int num1 = req.num1;
    int num2 = req.num2;

    ROS_INFO("服务器接收到的请求数据为:num1 = %d, num2 = %d",num1, num2);

    //逻辑处理
    if (num1 < 0 || num2 < 0)
    {
        ROS_ERROR("提交的数据异常:数据不可以为负数");
        return false;
    }

    //如果没有异常，那么相加并将结果赋值给 resp
    resp.sum = num1 + num2;
    return true;


}

int main(int argc, char *argv[])
{
    /* 
        服务器实现:
        1.包含头文件
        2.初始化 ROS 节点
        3.创建 ROS 句柄
        4.创建 服务 对象
        5.回调函数处理请求并产生响应
        6.由于请求有多个，需要调用 ros::spin()
    */
    // 2.初始化 ROS 节点
    setlocale(LC_ALL,"");
    ros::init(argc,argv,"fuwuyuan");
    // 2.初始化 ROS 节点
    ros::init(argc,argv,"add_two_int");
    // 3.创建 ROS 句柄
    ros::NodeHandle nh;
    // 4.创建 服务 对象
    ros::ServiceServer server = nh.advertiseService("add_two_ints",callback);
    // 5.回调函数处理请求并产生响应
    // 6.由于请求有多个，需要调用 ros::spin()
    ROS_INFO("服务器启动");
    ros::ServiceServer server = nh.advertiseService("add_two_ints",doReq);
    ROS_INFO("服务已经启动....");
    //     5.回调函数处理请求并产生响应
    //     6.由于请求有多个，需要调用 ros::spin()
    ros::spin();
    return 0;
}
}
